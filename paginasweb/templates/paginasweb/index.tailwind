{% load static %}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Solly - Conectando doadores a instituições que precisam de ajuda. Faça a diferença com uma doação.">
    <title>Solly - Conectando doadores a instituições</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="{% static 'css/estilo.css' %}" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- importar o Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #10b981;
            --primary-dark: #059669;
            --secondary-color: #3b82f6;
            --secondary-dark: #2563eb;
        }
        
        body {
            font-family: 'Inter', sans-serif;
        }
        
        .gradient-bg {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        }
        
        .card-hover {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        
        .btn-primary {
            background-color: var(--primary-color);
            transition: background-color 0.3s ease;
        }
        
        .btn-primary:hover {
            background-color: var(--primary-dark);
        }
        
        .btn-secondary {
            background-color: var(--secondary-color);
            transition: background-color 0.3s ease;
        }
        
        .btn-secondary:hover {
            background-color: var(--secondary-dark);
        }
        
        .section-padding {
            padding-top: 5rem;
            padding-bottom: 5rem;
        }
        
        .mobile-menu {
            transition: all 0.3s ease;
        }
        
        .fade-in {
            animation: fadeIn 0.8s ease-in-out;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .loading {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255,255,255,.3);
            border-radius: 50%;
            border-top-color: #fff;
            animation: spin 1s ease-in-out infinite;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
    </style>

    
    <!-- Header Melhorado -->
    <header class="gradient-bg text-white sticky top-0 z-50 shadow-lg backdrop-blur-sm bg-green-600/95" role="banner">
        <nav class="container mx-auto px-4 sm:px-6 py-3" aria-label="Navegação principal">
            <div class="flex justify-between items-center">
                <!-- Logo -->
                <div class="flex items-center space-x-3">
                    <a href="{% url "index" %}#inicio" class="flex items-center space-x-3 group">
                        <img src="{% static 'img/Solly.png' %}" alt="Solly Logo" class="w-12 h-12 sm:w-14 sm:h-14 transition-transform group-hover:scale-105" />
                        <div>
                            <span class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-white to-green-100 bg-clip-text text-transparent">Solly</span>
                            <p class="text-xs text-green-100 hidden sm:block">Conectando solidariedade</p>
                        </div>
                    </a>
                </div>

                <!-- Desktop Menu -->
                <div class="hidden lg:flex items-center space-x-1" role="menubar">
                    <!-- Menu Principal -->
                    <div class="flex items-center space-x-1 mr-4">
                        
                        <a href="{% url "index" %}#inicio" class="nav-link group" role="menuitem">
                            <i class="bi bi-house-door-fill"></i>
                            Início
                        </a>
                        
                        <a href="{% url "index" %}#como-funciona" class="nav-link group" role="menuitem">
                            <i class="bi bi-info-circle-fill"></i>
                            Como Funciona
                        </a>
                        
                        <a href="{% url "index" %}#instituicoes" class="nav-link group" role="menuitem">
                            <i class="bi bi-building-fill"></i>
                            Instituições
                        </a>

                        <a href="{% url "index" %}#historias-inspiradoras" class="nav-link group" role="menuitem">
                            <i class="bi bi-book-fill"></i>
                            Histórias
                        </a>

                    </div>
                </div>
            </div>
        </nav>
    </header>


    <!-- Hero Section -->
    <section id="inicio" class="gradient-bg text-white py-20" aria-labelledby="hero-heading">
        <div class="container mx-auto px-6 text-center fade-in">
            <h1 id="hero-heading" class="text-4xl md:text-6xl font-bold mb-6">Faça a Diferença com uma Doação</h1>
            <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto">Conectamos doadores a instituições que realmente precisam de ajuda para transformar vidas e comunidades</p>
            <div class="flex flex-col sm:flex-row justify-center gap-4">
                {% if user.is_authenticated %}
                    <a href="{% url 'cadastrar-doacao' %}" class="bg-white text-green-600 px-8 py-3 rounded-full font-semibold hover:bg-gray-100 transition-colors shadow-lg">
                        Quero Doar
                    </a>
                {% else %}
                    <a href="{% url 'login' %}" class="bg-white text-green-600 px-8 py-3 rounded-full font-semibold hover:bg-gray-100 transition-colors shadow-lg">
                        Quero Doar (Login Necessário)
                    </a>
                {% endif %}
               
                <a href="{% url 'cadastrar-instituicao' %}" class="border-2 border-white text-white px-8 py-3 rounded-full font-semibold hover:bg-white hover:text-green-600 transition-colors">
                    Sou Instituição
                </a>
            </div>
        </div>
    </section>



    {% block conteudo %}
    <!-- Como Funciona Section -->
    <section id="como-funciona" class="section-padding bg-white" aria-labelledby="como-funciona-heading">
        <div class="container mx-auto px-6">
            <h2 id="como-funciona-heading" class="text-3xl md:text-4xl font-bold text-center text-gray-800 mb-16">Como Funciona</h2>
            <div class="grid md:grid-cols-3 gap-8">
                <div class="text-center p-6 rounded-lg bg-gray-50 card-hover">
                    <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-3">Cadastre-se</h3>
                    <p class="text-gray-600">Faça seu cadastro como doador ou instituição em poucos minutos</p>
                </div>
                
                <div class="text-center p-6 rounded-lg bg-gray-50 card-hover">
                    <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-3">Conecte-se</h3>
                    <p class="text-gray-600">Encontre instituições que precisam da sua ajuda ou doadores dispostos a ajudar</p>
                </div>
                
                <div class="text-center p-6 rounded-lg bg-gray-50 card-hover">
                    <div class="w-20 h-20 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-10 h-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-3">Faça a Diferença</h3>
                    <p class="text-gray-600">Realize doações e acompanhe o impacto positivo que está causando</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Histórias Inspiradoras Section -->
    <section id="historias-inspiradoras" class="section-padding bg-gray-50" aria-labelledby="historias-heading">
        <div class="container mx-auto px-6">
            <h2 id="historias-heading" class="text-3xl md:text-4xl font-bold text-center text-gray-800 mb-16">Histórias Inspiradoras</h2>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <div class="bg-white rounded-xl shadow-md overflow-hidden card-hover">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/0e363574-18c7-4f82-ab72-e8c4acbebba7.png" alt="João Santos - Beneficiário de programa de alimentação comunitária" class="w-16 h-16 rounded-full object-cover mr-4" />
                            <div>
                                <h4 class="font-semibold text-lg">João Santos</h4>
                                <p class="text-gray-600">Beneficiário</p>
                            </div>
                        </div>
                        <p class="text-gray-700 italic">"Graças à solidariedade de pessoas que nunca conheci, consegui terminar meus estudos e hoje posso retribuir ajudando outros jovens."</p>
                    </div>
                </div>
                
                <div class="bg-white rounded-xl shadow-md overflow-hidden card-hover">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/bf9e2586-09ae-4e41-bb93-5b5e54a0716c.png" alt="Ana Costa - Organizadora de campanhas de arrecadação comunitária" class="w-16 h-16 rounded-full object-cover mr-4" />
                            <div>
                                <h4 class="font-semibold text-lg">Ana Costa</h4>
                                <p class="text-gray-600">Organizadora</p>
                            </div>
                        </div>
                        <p class="text-gray-700 italic">"Mobilizamos toda a comunidade para arrecadar mais de 2 toneladas de alimentos. A união faz a força e transforma realidades."</p>
                    </div>
                </div>
                
                <div class="bg-white rounded-xl shadow-md overflow-hidden card-hover">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <img src="{% static 'img/crianças.jpg' %}" alt="Maria Silva - Voluntária" class="w-16 h-16 rounded-full object-cover mr-4" />
                            <div>
                                <h4 class="font-semibold text-lg">Maria Silva</h4>
                                <p class="text-gray-600">Voluntária</p>
                            </div>
                        </div>
                        <p class="text-gray-700 italic">"Ver o sorriso no rosto das crianças que ajudamos é a maior recompensa. Cada doação faz uma diferença real em suas vidas."</p>
                    </div>
                </div>
                
                <div class="bg-white rounded-xl shadow-md overflow-hidden card-hover">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <img src="{% static 'img/idoso.jpg' %}" alt="Carlos Oliveira - Doador Regular" class="w-16 h-16 rounded-full object-cover mr-4" />
                            <div>
                                <h4 class="font-semibold text-lg">Carlos Oliveira</h4>
                                <p class="text-gray-600">Doador Regular</p>
                            </div>
                        </div>
                        <p class="text-gray-700 italic">"Doar se tornou um hábito. É gratificante saber que minha contribuição mensal ajuda a manter projetos importantes para a comunidade."</p>
                    </div>
                </div>
                
                <div class="bg-white rounded-xl shadow-md overflow-hidden card-hover">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <img src="{% static 'img/animais.jpg' %}" alt="Sofia Mendes - Resgatadora de Animais" class="w-16 h-16 rounded-full object-cover mr-4" />
                            <div>
                                <h4 class="font-semibold text-lg">Sofia Mendes</h4>
                                <p class="text-gray-600">Resgatadora de Animais</p>
                            </div>
                        </div>
                        <p class="text-gray-700 italic">"Com o apoio da Solly, conseguimos mais ração e medicamentos para os animais resgatados. Eles merecem uma segunda chance!"</p>
                    </div>
                </div>
                
                <div class="bg-white rounded-xl shadow-md overflow-hidden card-hover">
                    <div class="p-6 flex flex-col justify-center items-center text-center h-full">
                        <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mb-4">
                            <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                        </div>
                        <h4 class="font-semibold text-lg mb-2">Compartilhe Sua História</h4>
                        <p class="text-gray-700 mb-4">Inspire outras pessoas com sua experiência de solidariedade</p>
                        <button onclick="openAddStoryModal()" class="bg-green-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-green-700 transition-colors">
                            Compartilhar
                        </button>
                    </div>
                </div>
            </div>
        </div>    
    </section>

    <!-- Instituições Section -->
    <section id="instituicoes" class="section-padding bg-white" aria-labelledby="instituicoes-heading">
        <div class="container mx-auto px-6">
            <h2 id="instituicoes-heading" class="text-3xl md:text-4xl font-bold text-center text-gray-800 mb-16">Instituições Cadastradas</h2>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" id="institutions-container">

                <div class="bg-white rounded-xl shadow-md overflow-hidden card-hover">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <img src="{% static 'img/idoso.jpg' %}" alt="Carlos Oliveira - Doador Regular" class="w-16 h-16 rounded-full object-cover mr-4" />
                            <div>
                                <h4 class="font-semibold text-lg">Carlos Oliveira</h4>
                                <p class="text-gray-600">Doador Regular</p>
                            </div>
                        </div>
                        <p class="text-gray-700 italic">"Doar se tornou um hábito. É gratificante saber que minha contribuição mensal ajuda a manter projetos importantes para a comunidade."</p>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-md overflow-hidden card-hover">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <img src="{% static 'img/idoso.jpg' %}" alt="Carlos Oliveira - Doador Regular" class="w-16 h-16 rounded-full object-cover mr-4" />
                            <div>
                                <h4 class="font-semibold text-lg">Carlos Oliveira</h4>
                                <p class="text-gray-600">Doador Regular</p>
                            </div>
                        </div>
                        <p class="text-gray-700 italic">"Doar se tornou um hábito. É gratificante saber que minha contribuição mensal ajuda a manter projetos importantes para a comunidade."</p>
                    </div>
                </div>

            </div>
        </div>
    </section>
    {% endblock conteudo %}
    

   <!-- Footer -->
<footer class="bg-gray-900 text-white py-12" role="contentinfo">
    <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Brand -->
            <div class="lg:col-span-1">
                <div class="flex items-center space-x-3 mb-4">
                    <img src="{% static 'img/Solly.png' %}" alt="Solly Logo" class="w-12 h-12" />
                    <span class="text-2xl font-bold bg-gradient-to-r from-green-400 to-blue-400 bg-clip-text text-transparent">Solly</span>
                </div>
                <p class="text-gray-400 mb-4 leading-relaxed">Conectando pessoas que querem ajudar com instituições que precisam de apoio para construir um mundo melhor.</p>
                <div class="flex space-x-3">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-500/20 text-green-400 border border-green-500/30">
                        💚 Solidariedade
                    </span>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-500/20 text-blue-400 border border-blue-500/30">
                        🤝 Conexão
                    </span>
                </div>
            </div>

            <!-- Links Rápidos -->
            <div>
                <h4 class="font-semibold text-lg mb-4 text-white">Navegação</h4>
                <ul class="space-y-3">
                    <li>
                        <a href="#inicio" class="text-gray-400 hover:text-white transition-colors flex items-center group">
                            <svg class="w-4 h-4 mr-3 text-green-400 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                            </svg>
